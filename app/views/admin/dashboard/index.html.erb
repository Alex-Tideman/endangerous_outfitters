<div class="admin_dashboard">
  <article>

    <h1 id="title">Admin Dashboard</h1>

    <div class="demo-grid-1 mdl-grid">

          <div class="mdl-cell mdl-cell--4-col"><div id="whole-card" class="mdl-card mdl-shadow--2dp demo-card-wide">

            <div class= "mdl-card__title">
              <h3 class="mdl-card__title-text">Create</h3>
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <%= link_to "Create Trip", new_admin_trip_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
              <%= link_to "Create Activity", new_admin_activity_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
            </div>
          </div></div>
    </div>

    <div class="demo-grid-1 mdl-grid">

      <div class="mdl-cell mdl-cell--4-col"><div id="whole-card" class="mdl-card mdl-shadow--2dp demo-card-wide">

        <div class= "mdl-card__title">
          <h3 class="mdl-card__title-text">View</h3>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%= link_to "All Users", admin_users_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          <%= link_to "All Destinations", admin_destinations_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          <%= link_to "All Activities", admin_activities_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          <%= link_to "All Trips", admin_trips_path, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        </div>
      </div></div>
    </div>
  </article>

</div>