<article>

  <h1 id="title">All Trips</h1>

  <div class="demo-grid-1 mdl-grid">

    <% @trips.each do |trip| %>

        <div class="mdl-cell mdl-cell--4-col"><div id="whole-card" class="mdl-card mdl-shadow--2dp demo-card-wide">

          <div class= "mdl-card__title">
            <h3 class="mdl-card__title-text"><%= trip.name %></h3>
          </div>
          <div class="trips-card">
            <%= image_tag trip.image, class: "trip-index-card" %>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= link_to "View Trip", admin_trip_path(trip.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          </div>
        </div></div>

    <% end %>
  </div>
</article>
