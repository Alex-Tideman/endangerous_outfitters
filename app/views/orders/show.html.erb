<table id="order-table" class="mdl-data-table mdl-js-data-table"> '
  <thead>
  <tr>
    <th id="table-title" class="mdl-data-table__cell--non-numeric">Order # <%= @order.id %></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
    <th id="table-title" class="mdl-data-table__cell--non-numeric"></th>
  </tr>
  <tr>
    <th class="mdl-data-table__cell--non-numeric">Trip</th>
    <th>Quantity</th>
    <th>Total Cost</th>
    <th class="mdl-data-table__cell--non-numeric">Date Ordered</th>
    <th class="mdl-data-table__cell--non-numeric">Status</th>
  </tr>
  </thead>
  <tbody>
  <% @order.order_trips.each do |order_trip| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to order_trip.trip.name, trip_path(order_trip.trip) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= order_trip.quantity %></td>
        <td><%= number_to_currency(order_trip.trip.total_cost * order_trip.quantity) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= (order_trip.trip.created_at).to_formatted_s(:long) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= @order.status %></td>
      </tr>
  <% end %>
  </tbody>
</table>