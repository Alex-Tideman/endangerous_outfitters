<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src="map.js" type="text/javascript"></script>

<article>

  <h1 id="title">All Trips</h1>

  <div>
    <div id="map">

    </div>
  </div>

  <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers([
              {
                  "lat": 53,
                  "lng": -119,
                  "picture": new google.maps.Marker(),
              }
          ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
      });
  </script>


  <div class="demo-grid-1 mdl-grid">

    <% @trips.each do |trip| %>

        <div class="mdl-cell mdl-cell--4-col"><div id="whole-card" class="mdl-card mdl-shadow--2dp demo-card-wide">

          <div class= "mdl-card__title">
            <h3 class="mdl-card__title-text"><%= trip.name %></h3>
          </div>
          <div class="trips-card">
            <%= image_tag trip.image, class: "trip-index-card" %>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= link_to "View Trip", trip_path(trip.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          </div>
        </div></div>

    <% end %>
  </div>
</article>

