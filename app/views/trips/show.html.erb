<article>
  <h1 class="trips-header"><%= @trip.name %></h1>

  <div class="trip-header-img">
    <img src="<%= @trip.image_url %>" />
  </div>

  <div class="mdl-grid">
    <div class="description mdl-cell mdl-cell--7-col">

      <p>
        <%= @trip.description %>
      </p>

      <h3 class="trip-subheader">Price: $9,000</h3>
    </div>

    <div class="extras mdl-cell mdl-cell--5-col">
      <table id="extra-table" class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
      <thead>
        <tr>
          <th id = "extras-heading" class="mdl-data-table__cell--non-numeric"></th>

        </tr>
      </thead>

      <tbody>
        <% @extras.each do |extra| %>
        <tr>
          <td class="mdl-data-table__cell--non-numeric"><%= link_to extra.name%></td>
          <td>$<%= extra.cost %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>







  </div>

  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--7-col"></div>
    <div class="mdl-cell mdl-cell--5-col">
      <%= link_to "Book Trip", cart_trips_path(trip_id: @trip.id), method: :post, class: "call-to-action" %>
    </div>
  </div>
</article>
